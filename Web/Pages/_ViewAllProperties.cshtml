@using Core.Entities
@model IEnumerable<Property>
<table class="table table-bordered" id="propertyTable">
    <thead>
        <tr>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Zipcode
            </th>
            <th>
                PropType
            </th>
            <th>
                Bedrooms
            </th>
            <th>
                YearBuilt
            </th>
            <th>
                MarketValue
            </th>
            <th>
                size
            </th>
            <th class="col-lg-9">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var property in Model)
            {
                <tr>
                    <td>
                        @property.Address
                    </td>

                    <td>
                        @property.City
                    </td>
                    <td>
                        @property.State
                    </td>
                    <td>
                        @property.Zipcode
                    </td>
                    <td>
                        @property.PropType
                    </td>
                    <td>
                        @property.Bedrooms
                    </td>
                    <td>
                        @property.YearBuilt
                    </td>
                    <td>
                        @property.size
                    </td>
                    <td>
                        @property.MarketValue
                    </td>

                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEditProperty&id=@property.Id','Edit Property')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="PropertyIndex" asp-route-id="@property.Id" asp-page-handler="Delete" onsubmit="return jQueryPropertyModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#propertyTable").DataTable();
    });
</script>

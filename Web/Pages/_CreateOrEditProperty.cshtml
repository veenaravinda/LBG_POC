@using Core.Entities
@model Property
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEditProperty" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address</label>
        <div class="col-lg-9">
            <input type="text" autocomplete="off" asp-for="Address" name="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">City</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="City" name="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">State</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="State" name="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Zipcode</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Zipcode" name="Zipcode" class="form-control">
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">PropType</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="PropType" name="PropType" class="form-control">
            <span asp-validation-for="PropType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Bedrooms</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="Bedrooms" name="Bedrooms" class="form-control">
            <span asp-validation-for="Bedrooms" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">YearBuilt</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="YearBuilt" name="YearBuilt" class="form-control">
            <span asp-validation-for="YearBuilt" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">size</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="size" name="size" class="form-control">
            <span asp-validation-for="size" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">MarketValue</label>
        <div class="col-md-9">
            <input type="decimal" autocomplete="off" asp-for="MarketValue" name="MarketValue" class="form-control">
            <span asp-validation-for="MarketValue" class="text-danger"></span>
        </div>
    </div>

   
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>    